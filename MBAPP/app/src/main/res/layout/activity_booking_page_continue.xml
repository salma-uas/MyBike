<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookingPageContinue"
    android:background="@drawable/mobilebackground"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_main"

        />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@+id/toolbar"
        >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >




    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/backgroundapp5"/>


        <RelativeLayout
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:gravity="center"
            android:layout_marginTop="20dp"

            >


            <TextView
                android:id="@+id/txtBookingID"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Booking ID"

                />

            <TextView
                android:id="@+id/txtBookingIDValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booking ID Goes Here"
                android:layout_toRightOf="@+id/txtBookingID"
                />


            <TextView
             android:id="@+id/txtPickupPoint"
             android:layout_width="100dp"
             android:layout_height="wrap_content"
             android:text="Pickup point"
             android:layout_below="@+id/txtBookingID"

             />

        <TextView
            android:id="@+id/txtPickupPointValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pickup point Goes Here"
            android:layout_toRightOf="@+id/txtPickupPoint"
            android:layout_below="@+id/txtBookingID"

            />

            <TextView
                android:id="@+id/txtDestination"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Destination"
                android:layout_below="@+id/txtPickupPoint"

                />

            <TextView
                android:id="@+id/txtDestinationtValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pickup point Goes Here"
                android:layout_toRightOf="@+id/txtDestination"
                android:layout_below="@+id/txtPickupPoint"

                />

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Price"
                android:layout_below="@+id/txtDestination"

                />

            <TextView
                android:id="@+id/txtPriceValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RM ###"
                android:layout_toRightOf="@+id/txtPrice"
                android:layout_below="@+id/txtDestination"

                />

            <TextView
                android:id="@+id/txtStatusBooking"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Status"
                android:layout_below="@+id/txtPrice"

                />

            <TextView
                android:id="@+id/txtStatusValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status Goes Here"
                android:layout_toRightOf="@+id/txtPrice"
                android:layout_below="@+id/txtPrice"

                />


            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Driver Info"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/txtStatusValue"
                android:textStyle="bold"
                android:textSize="18dp"
                />

            <TextView
                android:id="@+id/txtName"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Name"
                android:layout_below="@+id/txtTitle"

                />

            <TextView
                android:id="@+id/txtNameValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Driver Name Goes Here"
                android:layout_toRightOf="@+id/txtPrice"
                android:layout_below="@+id/txtTitle"

                />

            <TextView
                android:id="@+id/txtBikeModel"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Bike Model"
                android:layout_below="@+id/txtName"

                />

            <TextView
                android:id="@+id/txtBikeModelValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bike Model Goes Here"
                android:layout_toRightOf="@+id/txtPrice"
                android:layout_below="@+id/txtName"

                />

            <TextView
                android:id="@+id/txtPlateNo"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Plate No"
                android:layout_below="@+id/txtBikeModel"

                />

            <TextView
                android:id="@+id/txtPlateNoValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plate No Goes Here"
                android:layout_toRightOf="@+id/txtPrice"
                android:layout_below="@+id/txtBikeModel"

                />







        </RelativeLayout>

        <Button
            android:id="@+id/btnDriverFeedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info"
            android:text="View Driver Rating"
            android:layout_centerHorizontal="true"
            android:onClick="onDriver"
            />


        <TextView
            android:id="@+id/txtTimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="timer"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/info"
            />


        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Driver is on the way. Please Wait"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/txtTimer"
            />


        <RelativeLayout
            android:id="@+id/info2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtStatus"
            android:layout_marginTop="50dp"
            android:gravity="center"
            >


            <Button
                android:id="@+id/btnArrived"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:text="Arrived"
                android:onClick="onArrived"
                />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:layout_toRightOf="@+id/btnArrived"
                android:text="Cancel"
                android:onClick="onCancelBooking"
                />

            <Button
                android:id="@+id/btnPayment"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginLeft="79dp"
                android:gravity="center"
                android:text="Payment"
                android:onClick="onPayment"
                />

            <Button
                android:id="@+id/btnCompleted"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:text="Completed"
                android:onClick="onCompleted"
                />


        </RelativeLayout>


        <Button
            android:id="@+id/btnEmergency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/info2"
            android:onClick="onCancelBooking"
            android:layout_centerHorizontal="true"
            android:text="Emergency Cancel" />




    </RelativeLayout>


    </ScrollView>



</RelativeLayout>
