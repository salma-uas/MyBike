<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="#EFF1D3"


    android:orientation="vertical">

    <!-- android:background="@drawable/mobilebackground111" -->




    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_main"

        />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fitsSystemWindows="true"

        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/txtProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="2dp"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding = "16dp" >

                        <ImageView
                            android:id="@+id/imageUser"
                            android:layout_width="0dp"
                            android:layout_height="200dp"
                            android:layout_weight="1"
                            android:src="@drawable/noimage"
                            />

                        <Button
                            android:id="@+id/buttonUploadUser"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:text="Upload Image"

                            />

                    </LinearLayout>



                </LinearLayout>

            </RelativeLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_gravity="center">

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Name "
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/editName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:textColor="#000000"
                    android:gravity="left"
                    android:padding="10dp"
                    android:text=""
                    android:textSize="18dp" />


            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_gravity="center">

                <TextView
                    android:id="@+id/txtHpno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Contact No"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/editHpno"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:gravity="left"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="18dp" />

            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_gravity="center">

                <TextView
                    android:id="@+id/txtUserID"
                    android:layout_width="117dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Student ID"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/editUserID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:gravity="left"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="18dp" />

            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_gravity="center">

                <TextView
                    android:layout_width="117dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Username"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/txtUsername"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:gravity="left"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="18dp" />

            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_gravity="center">

                <TextView
                    android:id="@+id/txtFaculty"
                    android:layout_width="117dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Faculty"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold" />


                <Spinner
                    android:id="@+id/editFaculty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:entries="@array/faculty"
                    android:prompt="@string/select_faculty" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"

                >

                <TextView
                    android:id="@+id/txtGender"
                    android:layout_width="122dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="Gender"
                    android:textColor="#000000"
                    android:textSize="18dp"

                    />

                <RadioGroup
                    android:id="@+id/radioGroupGender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    >

                    <RadioButton
                        android:id="@+id/radioMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:textSize="18dp"
                        android:textColor="#000000"


                        />

                    <RadioButton
                        android:id="@+id/radioFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        android:textSize="18dp"
                        android:textColor="#000000"


                        />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_gravity="center">

                <TextView
                    android:id="@+id/txtEmail"
                    android:layout_width="117dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Email "
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/editEmail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:gravity="left"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="18dp" />


            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_gravity="center">

                <TextView
                    android:id="@+id/txtPassword"
                    android:layout_width="117dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Password"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/editPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:gravity="left"
                    android:padding="10dp"
                    android:inputType="textPassword"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    />


            </LinearLayout>



            <Button
                android:id="@+id/update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Register"
                android:textSize="20dp"
                android:onClick="onSignUp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>










